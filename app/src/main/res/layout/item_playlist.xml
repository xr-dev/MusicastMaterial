<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/item_height"
    android:focusable="true"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/cat_placeholder_playlist"
        android:layout_gravity="center_vertical"
        android:scaleType="fitCenter"/>

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/text_playlist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="PlaylistName"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:ellipsize="marquee"/>

        <TextView
            android:id="@+id/text_playlist_tracks"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/tracks"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_alignTop="@+id/text_playlist_num_tracks"
            android:layout_toRightOf="@+id/text_playlist_num_tracks" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="X"
            android:id="@+id/text_playlist_num_tracks"
            android:layout_below="@+id/text_playlist_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</LinearLayout>

